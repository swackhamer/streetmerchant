{
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": "./src",
    "esModuleInterop": true,
    "lib": [
      "DOM",
      "ES2023"
    ],
    "moduleResolution": "node",
    "outDir": "build",
    "skipLibCheck": true,
    "target": "ES2022"
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "ts-node": {
    "swc": true
  }
}
